# ===================================
# Variáveis de Ambiente - Docker Compose
# ===================================

# Backend Configuration
ENABLE_CACHE=true
LOG_LEVEL=INFO
LOG_FORMAT=json
MAX_ASSETS_PER_REQUEST=100
CACHE_TTL_SECONDS=3600
YFINANCE_MAX_RETRIES=3

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Frontend Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional: Se precisar de autenticação JWT
# JWT_SECRET=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=30

# Optional: Se precisar de CORS específico
# ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# ===================================
# Segurança (OBRIGATÓRIO em Produção)
# ===================================
# Gerar com: openssl rand -base64 32
JWT_SECRET_KEY=change-this-to-a-secure-random-key-in-production
# Gerar com: openssl rand -base64 24
REDIS_PASSWORD=change-this-to-a-secure-password-in-production

# Ambiente
ENVIRONMENT=development
# Origens permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
